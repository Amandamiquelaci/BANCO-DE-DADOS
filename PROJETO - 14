#Mostra todos os valores
select * from cursos;
#clausula where
select * from cursos
where nome  = "Java" and ano = 2025;

CREATE DATABASE clientes
DEFAULT CHARACTER SET utf8mb4 
DEFAULT COLLATE utf8mb4_general_ci;

#Selecionando o banco de dados
USE clientes ;

/*CREATE TABLE clientes ( 
id INT PRIMARY KEY AUTO_INCREMENT, 
nome VARCHAR(100), 
idade INT, 
cidade VARCHAR(100), 
estado VARCHAR(2) 
); */


CREATE TABLE clientes (
  id INT PRIMARY KEY AUTO_INCREMENT,
  nome VARCHAR(100),
  idade INT,
  cidade VARCHAR(100),
  estado VARCHAR(2)
);
