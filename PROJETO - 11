CREATE DATABASE cursos 
DEFAULT CHARACTER SET utf8mb4 
DEFAULT COLLATE utf8mb4_general_ci;

#Selecionando o banco de dados
USE cursos ;

#criando tabela
create table if not exists cursos (
id INT NOT NULL AUTO_INCREMENT,
nome varchar (30) not null unique, #N se repete
descricao text, #Sem tamanho defenido
carga int unsigned, # N aceita valor negativo
totaulas int unsigned,
ano year default '2025' ,
primary key (id)
) DEFAULT CHARSET = utf8mb4 ;

insert into cursos(nome,descricao,carga,totaulas,ano)
values ("java", "Programação", 30,15,2025);

select * from cursos;

update cursos
set nome = "Python"
where id = '1';

CREATE DATABASE escola
DEFAULT CHARACTER SET utf8mb4 
DEFAULT COLLATE utf8mb4_general_ci;

#Selecionando o banco de dados
USE escola ;

CREATE TABLE alunos ( 
id INT PRIMARY KEY AUTO_INCREMENT, 
nome VARCHAR(100), 
idade INT, 
curso VARCHAR(100)

); 


