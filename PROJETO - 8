/*Exercício 16 
Tabela: pagamentos(id, valor, data_pagamento) 
Tarefa: Renomeie a coluna data_pagamento para pagamento_em. 
*/
CREATE TABLE pagamentos (
   id INT NOT NULL AUTO_INCREMENT,
   fornecedor_id INT NOT NULL,              
   valor DECIMAL(10, 2) NOT NULL,            
   data_pagamento DATE NOT NULL,            
   PRIMARY KEY (id),
   FOREIGN KEY (fornecedor_id) REFERENCES fornecedores(id) 
) DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;

ALTER TABLE pagamentos
CHANGE COLUMN data_pagamento pagamento_em DECIMAL NOT NULL;

/*Exercício 17 
Tabela: avaliacoes(id, comentario, nota) 
Tarefa: Renomeie a coluna nota para pontuacao. */

CREATE TABLE avaliacoes (
   id INT NOT NULL AUTO_INCREMENT,
   fornecedor_id INT NOT NULL,             
   comentario TEXT,                         
   nota INT NOT NULL ,
   PRIMARY KEY (id),
   FOREIGN KEY (fornecedor_id) REFERENCES fornecedores(id) 
) DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;


ALTER TABLE avaliacoes
CHANGE COLUMN nota pontuacao DECIMAL NOT NULL;

