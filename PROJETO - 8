nome varchar(30),
idade tinyint,
sexo char(1),
peso float,
altura float,
nacionalidade varchar (20),
profissao varchar (40)
);

#mudar o nome da coluna
alter table pessoas
change column profissao prof varchar (20);

#mudar o nome da tabela
alter table pessoas
rename to cadastro;



/*Exercício 1 
Tabela: pessoas(id, nome, profissao, idade) 
Tarefa: Renomeie a coluna profissao para prof. */

CREATE DATABASE pessoas
DEFAULT CHARACTER SET utf8mb4 
DEFAULT COLLATE utf8mb4_general_ci;

#Selecionando o banco de dados
USE pessoas;

#Criando a tabela 
CREATE TABLE pessoas (
   id INT NOT NULL AUTO_INCREMENT,
   nome varchar(100) NOT NULL,
   profissao varchar(100) NOT NULL,
   idade tinyint,
   PRIMARY KEY (id)
) DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;


alter table pessoas
change column profissao prof varchar (20);


/*Exercício 2 
Tabela: clientes(id, nome, email, telefone) 
Tarefa: Renomeie a coluna telefone para contato_telefone. */

CREATE TABLE clientes (
   id INT NOT NULL AUTO_INCREMENT,
   nome varchar(100) NOT NULL,
   email varchar(100) NOT NULL,
   telefone int,
   PRIMARY KEY (id)
) DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;

alter table clientes
change column telefone contato_telefone  varchar (20);

/*Exercício 3 
Tabela: produtos(id, nome_produto, preco, estoque) 
Tarefa: Renomeie a coluna nome_produto para descricao. */


CREATE TABLE produtos (
   id INT NOT NULL AUTO_INCREMENT,
   nome_produto varchar(100) NOT NULL,
   preco float,
   telefone int,
   PRIMARY KEY (id)
) DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;

alter table produtos
change column nome_produto descricao  varchar (20);

