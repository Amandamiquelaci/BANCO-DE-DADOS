/*10. Crie um banco de dados chamado Biblioteca. Crie três tabelas: Livros 
(livro, titulo, autor), Autores (autor, nome, nacionalidade) e Emprestimos 
(emprestimo, livro, usuario, data_emprestimo).*/

create database biblioteca
DEFAULT CHARACTER SET utf8mb4 #codigo regional 
DEFAULT COLLATE utf8mb4_general_ci;

use biblioteca;

create table biblioteca( 
id INT NOT NULL AUTO_INCREMENT,
livro varchar (30)NOT NULL,
titulo varchar (30)NOT NULL,
autor varchar (30) NOT NULL,
PRIMARY KEY (id)
)DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;

create table autores( 
id INT NOT NULL AUTO_INCREMENT,
autor varchar (30)NOT NULL,
nome varchar (30)NOT NULL,
nacionalidade varchar (30) NOT NULL,
PRIMARY KEY (id)
)DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;

create table emprestimos( 
id INT NOT NULL AUTO_INCREMENT,
emprestimo varchar (30)NOT NULL,
livro varchar (30)NOT NULL,
usuario varchar (30) NOT NULL,
PRIMARY KEY (id)
)DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;

/*11. Crie um banco de dados chamado Universidade. Crie três tabelas: Cursos 
(curso, nome, carga_horaria), Alunos (aluno, nome, email) e Matriculas 
(matricula, aluno, curso, data_matricula).*/

create database universidade
DEFAULT CHARACTER SET utf8mb4 #codigo regional 
DEFAULT COLLATE utf8mb4_general_ci;

use universidade;

create table universidade ( 
id INT NOT NULL AUTO_INCREMENT,
curso varchar (30)NOT NULL,
nome varchar (30)NOT NULL,
cargahoraria int ,
PRIMARY KEY (id)
)DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;

create table aluno( 
id INT NOT NULL AUTO_INCREMENT,
aluno varchar (30)NOT NULL,
nome varchar (30)NOT NULL,
email varchar (30) NOT NULL,
#data
PRIMARY KEY (id)
)DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;

create table matriculas( 
id INT NOT NULL AUTO_INCREMENT,
matricula varchar (30)NOT NULL,
aluno varchar (30)NOT NULL,
curso varchar (30) NOT NULL,
#data
PRIMARY KEY (id)
)DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;


/*12. Crie um banco de dados chamado ClinicaMedica. Crie três tabelas: 
