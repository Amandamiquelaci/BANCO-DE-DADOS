/*20. Crie um banco de dados chamado AgenciaViagens. Crie três tabelas: 
Clientes (cliente, nome, telefone), Pacotes (pacote, destino, preco) e 
Reservas (reserva, cliente, pacote, data_reserva).*/


create database angenciaviagens
DEFAULT CHARACTER SET utf8mb4 #codigo regional 
DEFAULT COLLATE utf8mb4_general_ci;

use angenciaviagens;

create table angenciaviagens ( 
id INT NOT NULL AUTO_INCREMENT,
cliente varchar (30)NOT NULL,
nome varchar (30)NOT NULL,
telefone int,
PRIMARY KEY (id)
)DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;


create table pacotes ( 
id INT NOT NULL AUTO_INCREMENT,
pacote varchar (30)NOT NULL,
destino varchar (30)NOT NULL,
preco decimal,
PRIMARY KEY (id)
)DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;

create table reservas ( 
id INT NOT NULL AUTO_INCREMENT,
reserva varchar (30)NOT NULL,
cliente varchar (30)NOT NULL,
pacote varchar (30)NOT NULL,
data_reserva decimal,
PRIMARY KEY (id)
)DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;


















