/*15. Crie um banco de dados chamado LocadoraFilmes. Crie três tabelas: 
Filmes (filme, titulo, genero), Clientes (cliente, nome, telefone) e Locacoes 
(locacao, cliente, filme, data_locacao).*/

create database locadorafilmes
DEFAULT CHARACTER SET utf8mb4 #codigo regional 
DEFAULT COLLATE utf8mb4_general_ci;

use locadorafilmes;

create table filmes ( 
id INT NOT NULL AUTO_INCREMENT,
filme varchar (30)NOT NULL,
titulo varchar (30)NOT NULL,
genero enum('M', 'F'),
PRIMARY KEY (id)
)DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;

create table cliente ( 
id INT NOT NULL AUTO_INCREMENT,
cliente varchar (30)NOT NULL,
nome varchar (30)NOT NULL,
telefone int,
PRIMARY KEY (id)
)DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;

create table locacoes ( 
id INT NOT NULL AUTO_INCREMENT,
locacao varchar (30)NOT NULL,
cliente varchar (30)NOT NULL,
filme varchar (30)NOT NULL,
data int,
PRIMARY KEY (id)
)DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;

/*16. Crie um banco de dados chamado OficinaMecanica. Crie três tabelas: 
Clientes (cliente, nome, telefone), Veiculos (veiculo, modelo, placa, 
cliente) e Servicos (servico, descricao, preco).*/

create database oficinaMecanica
DEFAULT CHARACTER SET utf8mb4 #codigo regional 
DEFAULT COLLATE utf8mb4_general_ci;

use oficinaMecanica;

create table clientes ( 
id INT NOT NULL AUTO_INCREMENT,
cliente varchar (30)NOT NULL,
nome varchar (30)NOT NULL,
telefone int,
PRIMARY KEY (id)
)DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;

create table veiculos ( 
id INT NOT NULL AUTO_INCREMENT,
veiculo varchar (30)NOT NULL,
modelo varchar (30)NOT NULL,
placa int,
cliente varchar (30)NOT NULL,
PRIMARY KEY (id)
)DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;

create table servicos ( 
id INT NOT NULL AUTO_INCREMENT,
servico varchar (30)NOT NULL,
descricao varchar (30)NOT NULL,
preco decimal,
PRIMARY KEY (id)
)DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;

/*17. Crie um banco de dados chamado Hotel. Crie três tabelas: Hospedes 
(hospede, nome, telefone), Quartos (quarto, numero, tipo) e Reservas 
(reserva, hospede, quarto, data_entrada, data_saida).*/

create database hotel
DEFAULT CHARACTER SET utf8mb4 #codigo regional 
DEFAULT COLLATE utf8mb4_general_ci;

use hotel;

create table hospedes ( 
id INT NOT NULL AUTO_INCREMENT,
hospede varchar (30)NOT NULL,
nome varchar (30)NOT NULL,
telefone int,
PRIMARY KEY (id)
)DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;

create table quarto( 
id INT NOT NULL AUTO_INCREMENT,
quarto varchar (30)NOT NULL,
tipo varchar (30)NOT NULL,
numero int,
PRIMARY KEY (id)
)DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;

create table reservas ( 
id INT NOT NULL AUTO_INCREMENT,
reserva varchar (30)NOT NULL,
hospede varchar (30)NOT NULL,
quarto int,
data_entrada decimal,
data_saida decimal,
PRIMARY KEY (id)
)DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;

/*18. Crie um banco de dados chamado Restaurante. Crie três tabelas: Clientes 
(cliente, nome, telefone), Pratos (prato, nome, preco) e Pedidos (pedido, 
cliente, prato, data_pedido).*/

create database restaurante
DEFAULT CHARACTER SET utf8mb4 #codigo regional 
DEFAULT COLLATE utf8mb4_general_ci;

use restaurante;

create table clientes ( 
id INT NOT NULL AUTO_INCREMENT,
cliente varchar (30)NOT NULL,
nome varchar (30)NOT NULL,
telefone int,
PRIMARY KEY (id)
)DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;

create table pratos ( 
id INT NOT NULL AUTO_INCREMENT,
prato varchar (30)NOT NULL,
nome varchar (30)NOT NULL,
preco decimal,
PRIMARY KEY (id)
)DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;

create table pedidos ( 
id INT NOT NULL AUTO_INCREMENT,
pedido varchar (30)NOT NULL,
cliente varchar (30)NOT NULL,
prato varchar (30)NOT NULL,
data_pedido decimal,
PRIMARY KEY (id)
)DEFAULT CHARSET = utf8mb4
COLLATE = utf8mb4_general_ci;


