#Mostrando todos os registros
select * from clientes;

#Mostrando dados que terminam com a letra 
SELECT * FROM clientes
	WHERE cidade LIKE '%a';
#Mostrando dados que comecem com a letra a 
SELECT * FROM clientes
WHERE nome LIKE 'a%';
#Mostrando dados que tenham a letra a em qualquer posição 
select * from clientes
where estado like '%a%';

#Mostrando os dados que tenham a letra o na segunda  posição
select * from clientes
where cidade like '_o';

select * from clientes
where titulo like 'a%o';

select * from clientes
where estado like 'a%';
